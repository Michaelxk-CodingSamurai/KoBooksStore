@model IEnumerable<Author>

@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">

    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Author List - Assign an Author to the Current Book</h2>
		</div>
	</div>
    <br /><br />


<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Forename
			</th>
            <th>
                Surname
			</th>
            <th></th>
            <th></th>
		</tr>
	</thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width="10%">
                    @obj.Forename
				</td>
                <td width="60%">
                    @obj.Surname
				</td>
                <td width="5%">
                    @obj.AuthorID
				</td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Book" asp-action="AssignAuthorToBook" asp-route-id="@obj.AuthorID" asp-route-bookId=@ViewBag.bookId
                        class="btn btn-info mx-2"> <i class="bi bi-signpost"></i> Assign Author</a>
				    </div>
				</td>
			</tr>
        }
    </tbody>

</table>

</div>

