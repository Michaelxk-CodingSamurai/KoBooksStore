@model Author

<form method="post" asp-action="Edit">
	<input asp-for="AuthorID" hidden/>
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Edit Author</h2>
			<hr />
		</div>
		<div asp-validation-summary="All"></div>
		<div class="mb-1">
			<label asp-for="Forename"></label>
			<input asp-for="Forename" class="form-control" />
			<span asp-validation-for="Forename" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="Surname"></label>
			<input asp-for="Surname" class="form-control" />
			<span asp-validation-for="Surname" class="text-danger"></span>
		</div>
		<button type="submit" class="btn btn-primary" style="width:150px">Update</button>
		<a asp-controller="Author" asp-action="Index" class="btn btn-secondary" style="width:180px">
			Back to Authors List
		</a>
	</div>
</form>

@section Scripts{
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}
